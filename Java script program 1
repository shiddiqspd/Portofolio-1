    <script>
        // ========== FUNGSI UMUM ==========
        
        function displayOutput(elementId, message) {
            const outputElement = document.getElementById(elementId);
            if (outputElement) {
                outputElement.textContent += message + "\n";
            }
            // Juga tampilkan di console browser
            console.log(message);
        }
        
        function resetOutput(elementId) {
            const outputElement = document.getElementById(elementId);
            if (outputElement) {
                outputElement.textContent = "";
            }
        }
        
        // ========== PERULANGAN FOR ==========
        
        function runForExample1() {
            resetOutput('output-for');
            displayOutput('output-for', "=== Contoh 1: Menghitung 1 sampai 10 ===");
            
            for(let i = 1; i <= 10; i++) {
                displayOutput('output-for', "Angka: " + i);
            }
        }
        
        function runForExample2() {
            resetOutput('output-for');
            displayOutput('output-for', "=== Contoh 2: Bilangan Genap 1-20 ===");
            
            for(let i = 2; i <= 20; i += 2) {
                displayOutput('output-for', "Bilangan genap: " + i);
            }
        }
        
        function runForExample3() {
            resetOutput('output-for');
            displayOutput('output-for', "=== Contoh 3: Hitung Mundur 10-1 ===");
            
            for(let i = 10; i >= 1; i--) {
                displayOutput('output-for', "Hitungan mundur: " + i);
            }
        }
        
        function resetForOutput() {
            resetOutput('output-for');
        }
        
        // ========== PERULANGAN WHILE ==========
        
        function runWhileExample1() {
            resetOutput('output-while');
            displayOutput('output-while', "=== Contoh 1: Menghitung hingga 5 ===");
            
            let counter = 1;
            while(counter <= 5) {
                displayOutput('output-while', "Counter: " + counter);
                counter++;
            }
        }
        
        function runWhileExample2() {
            resetOutput('output-while');
            displayOutput('output-while', "=== Contoh 2: Simulasi Login ===");
            displayOutput('output-while', "Catatan: Untuk contoh ini, gunakan console browser");
            
            // Simulasi login dengan prompt (akan bekerja jika diaktifkan)
            let password = "";
            let attempts = 0;
            let maxAttempts = 3;
            let correctPassword = "rahasia123";
            
            // Untuk demo, kita simulasikan dengan input tetap
            displayOutput('output-while', "Simulasi: Password salah 2x, lalu benar");
            
            while(password !== correctPassword && attempts < maxAttempts) {
                attempts++;
                
                // Simulasi input
                if (attempts === 3) {
                    password = correctPassword;
                    displayOutput('output-while', "Percobaan ke-" + attempts + ": Password BENAR");
                } else {
                    password = "salah";
                    displayOutput('output-while', "Percobaan ke-" + attempts + ": Password SALAH");
                }
            }
            
            if (password === correctPassword) {
                displayOutput('output-while', "Login berhasil!");
            } else {
                displayOutput('output-while', "Login gagal! Percobaan habis.");
            }
        }
        
        function runWhileExample3() {
            resetOutput('output-while');
            displayOutput('output-while', "=== Contoh 3: Pengurangan hingga 0 ===");
            
            let angka = 10;
            while(angka > 0) {
                displayOutput('output-while', "Angka saat ini: " + angka);
                angka -= 2;
            }
            displayOutput('output-while', "Selesai! Angka terakhir: " + angka);
        }
        
        function resetWhileOutput() {
            resetOutput('output-while');
        }
        
        // ========== PERULANGAN DO/WHILE ==========
        
        function runDoWhileExample1() {
            resetOutput('output-dowhile');
            displayOutput('output-dowhile', "=== Contoh 1: Eksekusi minimal sekali ===");
            displayOutput('output-dowhile', "Perhatikan: i dimulai dari 10, kondisi while(i < 5)");
            
            let i = 10;
            do {
                displayOutput('output-dowhile', "Nilai i: " + i);
                i++;
            } while(i < 5); // Kondisi false sejak awal, tapi eksekusi 1x tetap dilakukan
            
            displayOutput('output-dowhile', "Setelah do/while: i = " + i);
        }
        
        function runDoWhileExample2() {
            resetOutput('output-dowhile');
            displayOutput('output-dowhile', "=== Contoh 2: Validasi input pengguna ===");
            displayOutput('output-dowhile', "Simulasi: User menjawab 'tidak' 2x, lalu 'ya'");
            
            // Simulasi validasi input
            let jawaban;
            let percobaan = 0;
            
            do {
                percobaan++;
                
                // Simulasi input user
                if (percobaan === 3) {
                    jawaban = "ya";
                } else {
                    jawaban = "tidak";
                }
                
                displayOutput('output-dowhile', "Percobaan " + percobaan + ": Jawaban = '" + jawaban + "'");
            } while(jawaban !== "ya");
            
            displayOutput('output-dowhile', "User setuju setelah " + percobaan + " percobaan");
        }
        
        function runDoWhileExample3() {
            resetOutput('output-dowhile');
            displayOutput('output-dowhile', "=== Contoh 3: Menampilkan menu ===");
            
            let pilihan;
            let tampilMenu = true;
            
            do {
                displayOutput('output-dowhile', "=== MENU UTAMA ===");
                displayOutput('output-dowhile', "1. Lihat Profil");
                displayOutput('output-dowhile', "2. Ubah Password");
                displayOutput('output-dowhile', "3. Keluar");
                
                // Simulasi pilihan user
                pilihan = 3; // User memilih keluar
                
                if (pilihan === 1) {
                    displayOutput('output-dowhile', "Anda memilih: Lihat Profil");
                } else if (pilihan === 2) {
                    displayOutput('output-dowhile', "Anda memilih: Ubah Password");
                } else if (pilihan === 3) {
                    displayOutput('output-dowhile', "Anda memilih: Keluar");
                }
                
            } while(pilihan !== 3);
            
            displayOutput('output-dowhile', "Terima kasih telah menggunakan aplikasi!");
        }
        
        function resetDoWhileOutput() {
            resetOutput('output-dowhile');
        }
        
        // ========== FUNGSI UTAMA ==========
        
        function runAllExamples() {
            console.clear();
            console.log("üöÄ Menjalankan semua contoh perulangan...\n");
            
            // Jalankan semua contoh secara berurutan
            runForExample1();
            setTimeout(() => {
                console.log("\n");
                runWhileExample1();
                setTimeout(() => {
                    console.log("\n");
                    runDoWhileExample1();
                    
                    // Tampilkan pesan selesai
                    setTimeout(() => {
                        console.log("\n‚úÖ Semua contoh telah dijalankan!");
                        alert("Semua contoh perulangan telah dijalankan! Lihat output di halaman dan di Console (F12).");
                    }, 500);
                }, 500);
            }, 500);
        }
        
        function resetAllOutputs() {
            resetForOutput();
            resetWhileOutput();
            resetDoWhileOutput();
            console.clear();
            console.log("Semua output telah direset!");
        }
        
        // ========== CONTOH PRAKTIS TAMBAHAN ==========
        
        // Fungsi yang bisa dipanggil dari console
        window.demoPerulangan = function() {
            console.log("=== DEMO PERULANGAN PRAKTIS ===\n");
            
            // Contoh praktis FOR: Menghitung total belanja
            console.log("1. FOR: Menghitung total belanja");
            let hargaBarang = [15000, 25000, 10000, 5000];
            let total = 0;
            
            for(let i = 0; i < hargaBarang.length; i++) {
                total += hargaBarang[i];
                console.log(`Barang ${i+1}: Rp${hargaBarang[i]}`);
            }
            console.log(`Total belanja: Rp${total}\n`);
            
            // Contoh praktis WHILE: Menunggu koneksi
            console.log("2. WHILE: Simulasi koneksi internet");
            let koneksi = false;
            let detik = 0;
            
            while(!koneksi && detik < 5) {
                detik++;
                console.log(`Mencoba koneksi... (${detik} detik)`);
                // Simulasi: setelah 3 detik, koneksi berhasil
                if (detik >= 3) {
                    koneksi = true;
                    console.log("Koneksi berhasil!");
                }
            }
            console.log("");
            
            // Contoh praktis DO/WHILE: Game tebak angka
            console.log("3. DO/WHILE: Game tebak angka");
            let angkaRahasia = 7;
            let tebakan;
            let percobaan = 0;
            
            do {
                percobaan++;
                // Simulasi tebakan
                tebakan = percobaan === 3 ? 7 : percobaan;
                console.log(`Tebakan ${percobaan}: ${tebakan}`);
                
                if (tebakan < angkaRahasia) {
                    console.log("Terlalu kecil!");
                } else if (tebakan > angkaRahasia) {
                    console.log("Terlalu besar!");
                }
            } while(tebakan !== angkaRahasia && percobaan < 5);
            
            if (tebakan === angkaRahasia) {
                console.log(`Benar! Angka rahasianya adalah ${angkaRahasia}`);
                console.log(`Anda menebak dalam ${percobaan} percobaan`);
            } else {
                console.log(`Gagal! Angka rahasianya adalah ${angkaRahasia}`);
            }
        };
        
        // Inisialisasi
        window.onload = function() {
            console.log("=== PROGRAM PERULANGAN JAVASCRIPT ===");
            console.log("Program telah dimuat. Gunakan tombol di halaman untuk menjalankan contoh.");
            console.log("Atau ketik 'demoPerulangan()' di console untuk demo tambahan.");
            console.log("=".repeat(50));
        };
    </script>
</body>
</html>
